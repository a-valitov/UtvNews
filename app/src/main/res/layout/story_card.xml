<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/story_card_margin"
    android:elevation="@dimen/story_card_elevation"
    app:cardCornerRadius="@dimen/story_card_corner_radius">
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        
        <ImageView
            android:id="@+id/rv_item_preview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/logo_utv"
            />

        <TextView
            android:id="@+id/rv_item_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:textSize="11sp"
            android:paddingHorizontal="@dimen/story_card_date_padding_horizontal"
            tools:text="@string/story_card_date_placeholder"
            />

        <TextView
            android:id="@+id/rv_item_header"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:textSize="14sp"
            android:paddingHorizontal="@dimen/story_card_header_padding_horizontal"
            android:paddingBottom="@dimen/story_card_header_padding_bottom"
            tools:text = "@string/story_card_header_placeholder"
            />

    </LinearLayout>

</androidx.cardview.widget.CardView>